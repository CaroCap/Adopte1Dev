@model Adpote1Dev.Models.LoginForm

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div>
    <h4>LoginForm</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CliLogin" class="control-label"></label>
                    <input asp-for="CliLogin" class="form-control" />
                    <span asp-validation-for="CliLogin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CliPassword" class="control-label"></label>
                    <input asp-for="CliPassword" class="form-control" />
                    <span asp-validation-for="CliPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="LoginCreate">Créer un nouveau compte</a>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

